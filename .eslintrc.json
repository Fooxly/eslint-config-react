{
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "standard-jsx",
        "standard-react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "overrides": [
        {
            "files": ["*.spec.ts", "*.spec.tsx"],
            "extends": [
                "plugin:jest/recommended",
                "plugin:jest/style"
            ]
        }
    ],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-handler-names": "off",
        "react/react-in-jsx-scope": "off"
    }
}
