{
    "plugins": [
        "jest",
        "react",
        "react-hooks"
    ],
    "extends": [
        "@fooxly/eslint-config",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jest/recommended",
        "standard-jsx",
        "standard-react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
